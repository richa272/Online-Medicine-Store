// PRE LOADER
section.preloader
	.spinner
		span.spinner-rotate
// MENU
section.navbar.navbar-default.navbar-static-top(role='navigation')
	.container
		.navbar-header
			a.navbar-brand(href='./admin')
				i.fa.fa-heartbeat
				| Online Medicine Store
			// MENU LINKS
		.collapse.navbar-collapse
			ul.nav.navbar-nav.navbar-right
				li.appointment-btn
					a(href='./inventory') Inventory
				li.appointment-btn
					a(href='./registrations') Users
				li.appointment-btn
					a(href='./ucontacts') Contacts
				li.appointment-btn
					a(href='./logout') Log Out

.container
	.listing-reg

		h1 REGISTERED LIST
			
		form#delrec(action='./delreg' method='POST')
			button#delete.btn.btn-primary(type='submit' form='delrec' value='' name='del')
				i.fa.fa-trash
				| DELETE

		br
		table#regis.listing-table.table-dark.table-striped
			thead
				tr
					th Email
					th Full Name
					th Address
					th Phone Number
					th Admin
			tbody
				if registrations.length
					each registration in registrations
						tr
							td= registration.email
							td= registration.fullname
							td= registration.address
							td= registration.phone
							td= registration.access
			tfoot
				tr
					th Email
					th Full Name
					th Address
					th Phone Number
					th Admin
					
// FOOTER
.container
	.row.justify-content-md-center
		div(align='center')
			.footer-thumb
				h4.wow.fadeInUp(data-wow-delay='0.4s') Get medicines you need online, quick and easy!
		.col-md-12.col-sm-12.border-top
			div(align='center')
				.credits
					p Creator : Shilpi Char | Richa Gupta | Chaithanya Moozhickal

